#!/bin/bash

if [ $# -lt 2 ]
then
  echo "Usage: $(basename $0) <tests config file path> <test suite>+"
  exit 1
fi
CURRENT_DIR=$(dirname $0)
java -Dtests.config=$1 -cp ${CURRENT_DIR}/../sched/libs/junit4.jar:\
${CURRENT_DIR}/../sched/dist/schedtests-lib.jar:\
${CURRENT_DIR}/../sched/dist/sched-lib.jar:\
${CURRENT_DIR}/../sched/libs/guava-lib.jar:\
${CURRENT_DIR}/../sched/libs/freemarker-lib.jar:\
${CURRENT_DIR}/../sched/libs/maths-lib.jar:\
${CURRENT_DIR}/../sched/libs/watchmaker-lib.jar:\
$CURRENT_DIR/dist/jack-tests-lib.jar \
com.android.jack.test.junit.JackJUnitLauncher $2

